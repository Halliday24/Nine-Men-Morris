<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="619dp"
    tools:context=".RulesPopup"
    android:background="#faf1b4">

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/Rules4"
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:id="@+id/Return"
        android:text="return">
    </Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/Rules"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="36sp"
        android:text="HOW TO PLAY">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/Rules"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:id="@+id/Rules1"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:text="PLACE ALL YOUR PIECES ON BOARD AND MOVE THEM TO FORM A LINE">

    </TextView>

    <TextView
        android:id="@+id/Rules2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/Rules1"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="ONCE YOU FORM A MILL, YOU CAN REMOVE ONE OF YOUR OPPONENTS MEN. BREAK A MILL TO UNLOCK THE MILLS AGAIN"
        android:textColor="@color/black"
        android:textSize="20sp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/Rules2"
        android:layout_height="99dp"
        android:layout_marginTop="20dp"
        android:id="@+id/Rules3"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:text="PIECES FROM A FORMED MILL CAN'T BE REMOVED UNLESS NO OTHER MEN ARE AVAILABLE">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/Rules3"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:id="@+id/Rules4"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:text="YOUR AIM IS TO LEAVE YOUR OPPONENT WITH EITHER 2 PIECES OR 0 MOVES. GOODLUCK!">

    </TextView>



</RelativeLayout>
