<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="550dp"
    tools:context=".RulesPopup"
    android:background="#e0f0e3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#9370db"
        android:id="@+id/TopMargin">
    </RelativeLayout>

    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="#9370db"
        android:id="@+id/LeftMargin"
        android:orientation="horizontal">
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#9370db"
        android:layout_alignParentBottom="true"
        android:id="@+id/BottomMargin">
    </RelativeLayout>

    <LinearLayout
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:background="#9370db"
        android:layout_alignParentRight="true"
        android:id="@+id/RightMargin"
        android:orientation="horizontal">
    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/TopMargin"
        android:id="@+id/Rules"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="36sp"
        android:text="HOW TO PLAY">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/Rules"
        android:layout_toRightOf="@id/LeftMargin"
        android:layout_toLeftOf="@id/RightMargin"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:id="@+id/Rules1"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Place all your pieces on the board and move them to form a line">

    </TextView>

    <TextView
        android:id="@+id/Rules2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/Rules1"
        android:layout_toRightOf="@id/LeftMargin"
        android:layout_toLeftOf="@id/RightMargin"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Once you form a mill, you can remove one of your opponents men. Break a mill to unlock the mills again"
        android:textColor="@color/black"
        android:textSize="20sp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_below="@+id/Rules2"
        android:layout_toRightOf="@id/LeftMargin"
        android:layout_toLeftOf="@id/RightMargin"
        android:layout_height="99dp"
        android:layout_marginTop="20dp"
        android:id="@+id/Rules3"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Pieces from a formed mill can't be removed unless no other men are available">

    </TextView>

    <TextView
        android:id="@+id/Rules4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/Rules3"
        android:layout_toRightOf="@id/LeftMargin"
        android:layout_toLeftOf="@id/RightMargin"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Your aim is to leave your opponent with either 2 pieces or 0 moves. GOODLUCK!"
        android:textColor="@color/black"
        android:textSize="20sp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/Rules4"
        android:layout_toRightOf="@id/LeftMargin"
        android:textColor="@color/red"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="24dp"
        android:text="TAP ANYWHERE ON THE POPUP SCREEN TO EXIT">

    </TextView>



</RelativeLayout>
