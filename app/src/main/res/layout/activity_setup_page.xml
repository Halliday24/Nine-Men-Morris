<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0f0e3"
    android:padding="5dp"
    tools:context=".SetupPage">

    <SeekBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/volControl">

    </SeekBar>

    <EditText
        android:id="@+id/playerTwoName"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint="Enter Your Name"
        android:inputType="text"
        android:maxLength="12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.279"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69" />

    <ImageButton
        android:id="@+id/unmuteButtonSetup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:onClick="unmuteSoundSetup"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/muted" />

    <ImageButton
        android:id="@+id/muteButtonSetup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="2dp"
        android:background="@android:color/transparent"
        android:onClick="muteSoundSetup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.944"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/unmuted" />

    <ImageView
        android:id="@+id/playerOneImage"
        android:layout_width="93dp"
        android:layout_height="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.761"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.604"
        app:srcCompat="@drawable/blank" />

    <ImageView
        android:id="@+id/playerTwoImage"
        android:layout_width="93dp"
        android:layout_height="92dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.767"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.824"
        app:srcCompat="@drawable/blank" />

    <ImageButton
        android:id="@+id/pvpButton"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@null"
        android:onClick="playAgainstPlayer"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122"
        app:srcCompat="@drawable/playvshumanbutton" />

    <ImageButton
        android:id="@+id/pvpButtonGrey"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.128"
        app:srcCompat="@drawable/playvshumanbuttongrey"
        android:visibility="gone"
        android:onClick="playAgainstPlayer"/>

    <ImageButton
        android:id="@+id/easyComputerButton"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:background="@null"
        android:onClick="playAgainstEasyComputer"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.217"
        app:srcCompat="@drawable/playvseasycomputerbutton" />

    <ImageButton
        android:id="@+id/easyComputerButtonGrey"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.217"
        app:srcCompat="@drawable/playvseasycomputerbuttongrey"
        android:visibility="gone"
        android:onClick="playAgainstEasyComputer"/>

    <ImageButton
        android:id="@+id/hardComputerButton"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:background="@null"
        android:onClick="playAgainstHardComputer"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311"
        app:srcCompat="@drawable/playvshardcomputerbutton" />

    <ImageButton
        android:id="@+id/hardComputerButtonGrey"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311"
        app:srcCompat="@drawable/playvshardcomputerbuttongrey"
        android:visibility="gone"
        android:onClick="playAgainstHardComputer"/>

    <ImageButton
        android:id="@+id/playerOnePieceSelection"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@null"
        android:onClick="piecePopPlayerOne"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55"
        app:srcCompat="@drawable/piecesbutton"
        android:visibility="gone"
        />

    <ImageButton
        android:id="@+id/playerTwoPieceSelection"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@null"
        android:onClick="piecePopPlayerTwo"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.767"
        app:srcCompat="@drawable/piecesbutton"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/playerOneColourSelection"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@null"
        android:onClick="colourPopPlayerOne"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.622"
        app:srcCompat="@drawable/colourbutton"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/playerTwoColourSelection"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@null"
        android:onClick="colourPopPlayerTwo"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.832"
        app:srcCompat="@drawable/colourbutton"
        android:visibility="gone"/>

    <ImageButton
        android:id="@+id/playerOnePieceSelectionGrey"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@null"
        android:onClick="disabledButtonToast"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.557"

        app:srcCompat="@drawable/piecesbuttongrey" />

    <ImageButton
        android:id="@+id/playerTwoPieceSelectionGrey"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@null"
        android:onClick="disabledButtonToast"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.767"
        app:srcCompat="@drawable/piecesbuttongrey" />

    <ImageButton
        android:id="@+id/playerOneColourSelectionGrey"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@null"
        android:onClick="disabledButtonToast"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.621"
        app:srcCompat="@drawable/colourbuttongrey" />

    <ImageButton
        android:id="@+id/playerTwoColourSelectionGrey"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@null"
        android:onClick="disabledButtonToast"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.832"
        app:srcCompat="@drawable/colourbuttongrey" />

    <ImageButton
        android:id="@+id/backToHomeButton"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:background="@null"
        android:onClick="goToHomePage"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.258"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:srcCompat="@drawable/backtohomebutton" />

    <ImageButton
        android:id="@+id/startGameButton"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:background="@null"
        android:onClick="startGame"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.833"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976"
        app:srcCompat="@drawable/startgamebutton" />

    <EditText
        android:id="@+id/playerOneName"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
        android:hint="Enter Your Name"
        android:inputType="text"
        android:maxLength="12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.275"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48" />
</androidx.constraintlayout.widget.ConstraintLayout>